<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_side_small"
    android:layout_marginTop="@dimen/margin_side_medium"
    app:cardBackgroundColor="@color/white_bg"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/grey_text"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_side_medium">

        <ImageView
            android:id="@+id/image_calc"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginHorizontal="@dimen/margin_side_medium"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_side_small"
            android:fontFamily="@font/nunito_bold"
            android:maxLines="2"
            android:textColor="@color/black_text"
            android:minLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_calc"
            tools:text="@string/rectangle_title" />

        <TextView
            android:id="@+id/tv_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_side_small"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/visit"
            android:textColor="@color/pink"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_round_keyboard_arrow"
            app:drawableTint="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_subject" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>